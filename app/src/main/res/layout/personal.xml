<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/circle"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_marginLeft="61dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="56sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="片"
                android:textSize="21sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/stone"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/icon_defind_stone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="守护石"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_below="@id/stone"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/saved_star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 "
                android:textSize="56sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位"
                android:textSize="21sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/star_saved"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/icon_star_saved"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解救的星星"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_below="@id/star_saved"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_backbt"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="21dp"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/user_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="123456789@qq.com"
        />
    <ImageView
        android:id="@+id/star_got"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_star_got"
        android:scaleType="center"
        android:layout_marginTop="334dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得的星图"
        android:textSize="15sp"
        android:layout_below="@id/star_got"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/personal_black_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/black_bg"
        android:scaleType="center"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/ensure_login_out"
        android:layout_width="600px"
        android:layout_height="360px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@mipmap/ensure_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/whetherOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="是否退出登录?"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whetherOut"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="您的记录都会保存" />

        <TextView
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14.7dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/choice_bg"
            android:gravity="center"
            android:text="退出" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14.7dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/choice_bg"
            android:gravity="center"
            android:text="取消" />
    </RelativeLayout>
</RelativeLayout>